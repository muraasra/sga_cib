{% extends 'base.html.twig' %}

{% block title %}SGA_CIB{% endblock %}

{% block body %}
<div class="row ml-5 mr-5">

        <h1>Ajouter un courrier</h1>
         {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
         

<div class="row">
    <div class="col-6">{{ form_row(form.numero_odre) }}</div>
    <div class="col-6">{{ form_row(form.date_reception) }}</div>
    
</div>

   <div class="form-group">
            {{ form_label(form.objet) }}
            {{ form_widget(form.objet) }}
            {{ form_errors(form.objet) }}
    </div>
<div class="row">
    <div class="col-6">{{ form_row(form.expediteur) }}</div>
    <div class="col-6">{{ form_row(form.destinataire) }}</div>
    
</div>
<div class="row">
    <div class="col-6">{{ form_row(form.type_courrier) }}</div>
    <div class="col-6">{{ form_row(form.pieceJointe) }}</div>
    
</div>
    {{ form_rest(form) }}
    
    {{form_errors(form)}}
    {{form_end(form)}}
    
    
   
    
</div>


 
{% endblock %}
