{% extends 'base.html.twig' %}

{% block title %}SGA_CIB{% endblock %}

{% block body %} 
<style>
.pdf-container{
    width: 100%;
    height: 1000px;
    object-fit: contain;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 5px;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
    overflow: auto;
    display: block;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
    transform: scale(1);
    transform-origin: center center;
    
    text-decoration: none;
}
</style>
<div class="row ml-5 mr-5">

        <h1>Detail du courrier</h1>
        <ul>
            <li> Numero d'ordre : {{courrier.numeroOdre}}</li>
            <li> Objet : {{courrier.objet}}</li>
            <li>Expediteur : {{courrier.expediteur}}</li>
        </ul>
     
    <embed 
    src="{{ asset("uploads/piecejointe/") }}{{courrier.PieceJointe}}" 
    type="application/pdf"
    class="pdf-container"
    >    
    
    <button onclick="window.print()"> Imprimer </button>
 
    <a class="btn btn-primary" href="{{ path('app_courrier.pdf', {'id': courrier.id}) }}">Telecharger</a>

    
</div>


 
{% endblock %}
