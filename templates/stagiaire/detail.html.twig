{% extends 'base.html.twig' %}

{% block title %}SGA_CIB{% endblock %}

{% block body %} 
<style>
.pdf-container{
    width: 100%;
    height: 1000px;
    object-fit: contain;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 5px;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
    overflow: auto;
    display: block;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
    transform: scale(1);
    transform-origin: center center;
    
    text-decoration: none;
}
</style>
<div class="container ">
    <div class="btn-right ">
       
       <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                Accepter
        </a>
        <a href="{{ path("app_stagiaire.rejetCandidature",{id:stagiaire.id})}}" class="btn btn-dark">Rejeter</a>

    </div>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">Veuillez choisir un encadreur ! </h2>
            
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
        {{ form(form) }}
        {# <a href="{{ path("app_stagiaire.acceptCandidature",{id:stagiaire.id})}}" class="btn btn-primary">Accepter</a> #}
        
        </div>
    </div>

        <h1>Detail de la candidature</h1>
        <ul>
            <li> Nom & prenom :  <strong> {{stagiaire.nom |upper}} {{ stagiaire.prenom|capitalize }} </strong></li>
            <li> Age :  <strong> {{stagiaire.dateNais|date}} </strong></li>
            <li> Filiere :  <strong> {{stagiaire.filiere|capitalize}} </strong></li>
            <li> Etablissement :  <strong> {{stagiaire.etablissement|capitalize}} </strong></li>
            <li> Niveau :  <strong> {{stagiaire.classe|capitalize}} </strong></li>
            <li> Adresse :  <strong> {{stagiaire.addresse|capitalize}} </strong></li>
            <li> Numero CNI :  <strong> {{stagiaire.nCni|upper}} </strong></li>
            <li> Nationalite :  <strong> {{stagiaire.nationalite|capitalize}} </strong></li>
            <li> Email :  <strong> {{stagiaire.email|lower}} </strong></li>
            <li> Telephone :  <strong> {{stagiaire.telephone}} </strong></li>      
        </ul>
     <h1>CV</h1>
    <embed 
    src="{{ asset("uploads/piecejointe/") }}{{stagiaire.PathCv}}" 
    type="application/pdf"
    class="pdf-container"
    > 
     <h1>Lettre de Motivation</h1>   
    <embed 
    src="{{ asset("uploads/piecejointe/") }}{{stagiaire.PathLettreMotivation}}" 
    type="application/pdf"
    class="pdf-container"
    >    
    
    <button onclick="window.print()"> Imprimer </button>
 
    
</div>


 
{% endblock %}
