{% extends "base.html.twig" %}

{% block title %}
    Timeline des Tâches de {{ stagiaire.nom }} {{ stagiaire.prenom }}
{% endblock %}

{% block body %}
    <style>
        /* Style de base pour le body */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            
        }

        /* Container pour la timeline */
        .timeline {
            position: relative;
            margin: 20px 0;
            padding: 0;
            list-style: none;
        }

       /* Chaque élément de la timeline */
        .timeline-item {
            position: relative;
            width: 45%;
            padding: 10px 20px;
            margin-bottom: 20px;
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Ligne verticale dans la timeline */
        .timeline-item:before {
            content: '';
            position: absolute;
            left: 18px;
            top: 0;
            bottom: 0;
            width: 4px;
            background: #2c3e50;
        }

        /* Icône circulaire pour chaque élément */
        .timeline-item:after {
            content: '';
            position: absolute;
            left: 9px;
            top: 10px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: #2c3e50;
        }

        /* Contenu de chaque élément */
        .timeline-item-content {
            background: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Style des dates et descriptions */
        .timeline-item-content h2 {
            margin: 0 0 10px;
            color: #2c3e50;
        }
        .timeline-item-content p {
            margin: 0;
        }
        /* Alternance gauche/droite */
        .timeline-item-left {
            float: left;
            clear: left;
            margin-left: 5%;
        }
        .timeline-item-right {
            float: right;
            clear: right;
            margin-right: 5%;
        }
        /* Ligne verticale dans la timeline */
        .timeline:before {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            left: 50%;
            width: 4px;
            background: #2c3e50;
        }
         /* Icône circulaire pour chaque élément */
        .timeline-item:after {
            content: '';
            position: absolute;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: #2c3e50;
            top: 15px;
            z-index: 1;
        }
        /* Statuts de la tâche */
        .status {
            font-weight: bold;
            color: #3498db;
        }

        /* Position des icônes sur la ligne centrale */
        .timeline-item-left:after {
            left: -9px;
        }
        .timeline-item-right:after {
            right: -9px;
        }

        /* Statuts spécifiques */
        .status-a_faire {
            color: #e67e22;
        }
        .status-en_cours {
            color: #f39c12;
        }
        .status-termine {
            color: #27ae60;
        }
    </style>


<h1>Timeline des Tâches de {{ stagiaire.nom }} {{ stagiaire.prenom }}</h1>

<ul class="timeline">
    {% for tache in taches %}
    <li class="timeline-item {% if tache.statut == 'termine' %}timeline-item-right{% else %}timeline-item-left{% endif %}">
        <div class="timeline-item-content">
           <a href="{{ path("app_stagiaire.planifierTache",{id:stagiaire.id,tacheId:tache.id})}}"> <h2>  {{ tache.description }} </h2></a>
            <p><strong>Date de début:</strong> {{ tache.dateDebut|date('d/m/Y') }}</p>
            <p><strong>Date de fin:</strong> {{ tache.dateFin|date('d/m/Y') }}</p>
            <p class="status status-{{ tache.statut|lower }}"><strong>Statut:</strong> 
                {% if tache.statut == 'a_faire' %}
                    À faire
                {% elseif tache.statut == 'en_cours' %}
                    En cours
                {% elseif tache.statut == 'termine' %}
                    Terminé
                {% endif %}
            </p>
            {% if tache.commentaire %}
            <p class="timeline-item-comment" ><strong>Commentaire:</strong> {{ tache.commentaire }}</p>
            {% endif %}
        </div>
    </li>
    {% endfor %}
</ul>
{% endblock %}
